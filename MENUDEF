OptionValue "HDgarandfeed" {
	0, ".30-06"
	1, "7.76mm"
	2, "7.76mm but stronger"
}

OptionValue "HDgarandspeed" {
	0, "Normal"
	1, "Fast"
	2, "Very fast"
	3, "Really fast"
	4, "Stupidly fast"
	5, "Volume warning"
	6, "BRRRRRRT"
}

